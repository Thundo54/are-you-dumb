<Window x:Class="AYD.AreYouDumb"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AYD"
        mc:Ignorable="d"
        Title="Dumbness Test" Height="350" Width="400" MinWidth="400" MinHeight="350">
    <Grid>
        <TextBlock x:Name="TextBlock1" HorizontalAlignment="Center" Margin="0,60,0,0" Text="Czy jesteś głupi?" VerticalAlignment="Top" FontWeight="Bold" FontSize="40"/>
        <TextBlock x:Name="TextBlock2" HorizontalAlignment="Center" Margin="0,0,0,0" Text="Wiedziałem :3" VerticalAlignment="Center" FontWeight="Bold" FontSize="40" Visibility="Hidden"/>
        <Button x:Name="Button1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="Tak" Width="80" Height="40" FontSize="16" Margin="0,215,170,0" Click="Button1Click"/>
        <Button x:Name="Button2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="Nie" Width="80" Height="40" FontSize="16" Margin="170,215,0,0" Click="Button2Click"/>
    </Grid>
</Window>
